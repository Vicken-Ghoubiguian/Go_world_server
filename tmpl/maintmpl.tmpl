			function timeRefresh(timeoutPeriod) {
				setTimeout("location.reload();", timeoutPeriod);
			}
		</script>
	</head>
	<body onLoad="JavaScript:timeRefresh(10000);">
		{{if .Welcome_indicator}}

			{{template "bodytmpl" .}}

		{{else}}

			{{template "bodytmpl" .}}
		
		{{end}}

	</body>
</html>
{{end}}
